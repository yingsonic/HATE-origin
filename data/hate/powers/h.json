{
    "type": "origins:multiple",
    "progress": {
        "type": "origins:action_over_time",
        "rising_action": {
            "type": "origins:change_resource",
            "resource": "*:*_level",
            "operation": "add",
            "change": 1
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_var",
                    "comparison": ">=",
                    "compare_to": 500
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_level",
                    "comparison": "<",
                    "compare_to": 3
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_level",
                    "comparison": "==",
                    "compare_to": 0,
                    "inverted": true
                }
            ]
        },
        "interval": 1
    },
    "var": {
        "type": "origins:resource",
        "min": 0,
        "max": 500,
        "start_value": 0,
        "hud_render": {
            "should_render": true
        }
    },
    "level": {
        "type": "origins:resource",
        "min": 0,
        "max": 3,
        "start_value": 0,
        "hud_render": {
            "should_render": false
        }
    },
    "hidden": true
}